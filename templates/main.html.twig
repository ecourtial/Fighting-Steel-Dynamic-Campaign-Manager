<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Fighting Steel Dynamic Campaign Manager</title>
        {% block stylesheets %}
            <link href="{{ asset('css/main.css') }}" rel="stylesheet" />
        {% endblock %}
        <script src="{{ asset('js/vendor/jquery/jquery-3.2.1.min.js') }}"></script>
        <script type="text/javascript">
            var scenarioValidationURL = "{{ url('validateScenario') }}";
            var fsToTasURL = "{{ url('fsToTas') }}";
            var tasToFsURL = "{{ url('tasToFs') }}";
            var randomScenarioURL = "{{ url('scenarioGenerator') }}";
        </script>
    </head>
    <body>
        <div id="mainContainer">
            <div id="div1">

            </div>
            <div id="div2">
                <div id="div21">

                </div>
                <div id="div22">
                    <p class="main-title">Fighting Steel</p>
                    <p class="main-subtitle">Dynamic campaign manager</p>
                </div>
                <div id="div23">
                    Version X.Y.X
                </div>
            </div>
            <div id="div3">

            </div>
            <div id="div4">
                <div id="div41">

                </div>
                <div id="div42">
                    <!-- Scenario validation -->

                    <div class="scenariosList subMenu" id="scenarioValidationListContainer">
                        <label for="scenarioValidationList">Scenario</label>
                        <select id="scenarioValidationList" name="scenarioValidationList">
                            <option>Select a scenario</option>
                            {% for key, scenario in scenarios %}
                                <option value="{{ key }}">{{ key }}</option>
                            {% endfor %}
                        </select>
                        <button id="validateScenarioSubmitButton" class="myButton">Validate scenario</button>
                    </div>
                    <!-- TAS TO FS -->
                    <div id="tasToFsElements" class="subMenu">
                        <label for="oneShipName">One of your ship</label>
                        <input type="text" id="oneShipName"/>
                        <div class="scenariosList">
                            <label for="tasToFsscenarioList">Scenario</label>
                            <select id="tasToFsscenarioList">
                                <option>Select a scenario</option>
                                {% for key, scenario in scenarios %}
                                    <option value="{{ key }}">{{ key }}</option>
                                {% endfor %}
                            </select>
                            <div class="scenariosList">
                                <label for="switchLevelList">Switching level</label>
                                <select id="switchLevelList">
                                    <option>Select a level</option>
                                    {% for key, level in constant('App\\NameSwitcher\\Switcher\\SwitcherInterface::SWITCH_LEVELS') %}
                                        <option value="{{ key }}">{{ level }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <button id="tasToFsSubmitButton" class="myButton">Convert</button>
                    </div>
                    <!-- Scenario Generator -->
                    <div id="scenarioGeneratorElements" class="subMenu">
                        <p>
                            <label for="theaterList">Theater</label>
                            <select id="theaterList">
                                <option>Select a theater</option>
                                {% for theaterName, theaterData in constant('App\\ScenarioGenerator\\Engine\\ScenarioEnv::SELECTOR') %}
                                    {% for id, period in theaterData['periods'] %}
                                       <option value="{{ theaterName }}-{{ id }}">{{ theaterName }}: {{ period['name'] }}</option>
                                    {% endfor %}
                                {% endfor %}
                            </select>
                        </p>
                        <p>
                            <label for="switchLevelList">Mixed navies</label>
                            <select id="mixedNaviesLevelList">
                                <option value="0">No</option>
                                <option value="1">Yes</option>
                            </select>
                        </p>
                        <p><button id="generateScenarioSubmitButton" class="myButton">Generate</button></p>
                    </div>
                </div>
                <div id="div43">
                </div>
            </div>
            <div id="div5">

            </div>
            <div id="div6">
                <div id="div61">

                </div>
                <div id="console">

                </div>
                <div id="div63">

                </div>
            </div>
            <div id="div7">

            </div>
            <div id="div8">
                <button id="updateButton" title="Update the application" class="mainMenuButton updateButton" type="button"></button>
                <button id="tasToFsButton" title="TAS to FS scenario conversion" class="mainMenuButton tasToFsButton" type="button"></button>
                <button id="fsToTasButton" title="FS to TAS scenario conversion" class="mainMenuButton fsToTasButton" type="button"></button>
                <button id="validateScenarioButton" title="Validate a scenario" class="mainMenuButton validateScenarioButton" type="button"></button>
                <button id="randomScenarioButton" title="Generation of a random scenario" class="mainMenuButton randomScenarioButton" type="button"></button>
                <button disabled id="dynamicScenarioButton" title="Admiral mode: play a dynamic scenario of a few days" class="mainMenuButton dynamicScenarioButton" type="button"></button>
                <button disabled id="dynamicCampaignButton" title="Headquarters mode: play a dynamic campaign of a few weeks or months" class="mainMenuButton dynamicCampaignButton" type="button"></button>
            </div>
        </div>
        <script src="{{ asset('js/app/mainMenu.js') }}" type="text/javascript"></script>
    </body>
</html>
